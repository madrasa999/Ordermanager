<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<Button
    android:id="@+id/date_room_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrderAddLabel"
        android:text="Clients Name" />


    <EditText
        android:id="@+id/clients_name_edit_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <TextView
        android:id="@+id/order_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrderAddLabel"
        android:text="Order" />

    <EditText
        android:id="@+id/order_edit_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <TextView
        android:id="@+id/price_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrderAddLabel"
        android:text="price" />

    <EditText
        android:id="@+id/price_edit_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"

        />
    <Button
        android:id="@+id/saveB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"/>
</LinearLayout>
